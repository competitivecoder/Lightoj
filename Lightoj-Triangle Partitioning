#include <bits/stdc++.h>
using namespace std;
int main() {
	// your code goes here
	int t,temp;
	cin>>t;
	temp=t;
	while(t--)
	{
		double ab,ac,bc,r;
		cin>>ab>>ac>>bc>>r;
	    double sq=ab*sqrt((r/(r+1)*1.0)); // ratio of area is square of ratio of sides,property of similar triangle  
		printf ("Case %d: %lf\n", temp-t,sq);// %lf for long double
	}
	return 0;
}